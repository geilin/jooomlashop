<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5.0">
	<name>wNewsLetter</name>
	<!-- The following elements are optional and free of formatting conttraints -->
	<creationDate>5 2009</creationDate>
	<author>Le Van Hen</author>
	<authorEmail>levanhen01@yahoo.com</authorEmail>
	<authorUrl>http://wampvn.com</authorUrl>
	<copyright>http://wampvn.com</copyright>
	<license>Thương mại</license>
	<!--  The version string is recorded in the components table -->
	<version>V 1.0</version>
	<!-- The description is optional and defaults to the name -->
	<description>Wamp Newsletter...</description>
	<installfile>install.wnewsletter.php</installfile>
	<uninstallfile>uninstall.wnewsletter.php</uninstallfile>
	<!-- Site Main File Copy Section -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>wnewsletter.php</filename>
		<filename>controller.php</filename>
		<filename>livevali.js</filename>
		<filename>valid_style.css</filename>
		<filename>views/index.html</filename>
		<filename>views/newsletter/index.html</filename>
		<filename>views/newsletter/view.html.php</filename>
		<filename>views/newsletter/tmpl/index.html</filename>
		<filename>views/newsletter/tmpl/default.php</filename>
	</files>
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">uninstall.sql</file>
		</sql>
	</uninstall>	
	<administration>
		<!-- Administration Menu Section -->
		<menu>Wamp Newsletter</menu>		
		<submenu>
			<menu link="option=com_wnewsletter">Quản lý Newsletter</menu>
			<menu task="subscriber">Quản lý Subcriber</menu>
			<menu task="contact">Quản lý Contact</menu>
			<menu task="category">Quản lý Category</menu>
		</submenu>
		<files folder="admin">
	<!-- Site Main File Copy Section -->
			<filename>index.html</filename>
			<filename>admin.wnewsletter.php</filename>
			<filename>admin.wnewsletter.html.php</filename>
			<filename>admin.wnewsletter.class.php</filename>
			<filename>controller.php</filename>
			<filename>toolbar.wnewsletter.php</filename>
			<filename>toolbar.wnewsletter.html.php</filename>
			<filename>install.wnewsletter.php</filename>
			<filename>uninstall.wnewsletter.php</filename>
			<filename>install.sql</filename>
			<filename>uninstall.sql</filename>
			<filename>tables/index.html</filename>
			<filename>tables/newsletter.php</filename>
			<filename>tables/contact.php</filename>
			<filename>tables/subscriber.php</filename>
			<filename>tables/category.php</filename>
		</files>		
	</administration>
</install>
