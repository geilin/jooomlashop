<?xml version="1.0" encoding="utf-8"?>
 <!DOCTYPE install PUBLIC 
  "-//Joomla! 1.5//DTD plugin 1.1//EN" "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5" type="plugin" group="content">
<name>Content - Related Articles Tags</name>
<creationDate>08/09/2009</creationDate>
<author>Benjamin Agullana</author>
<authorEmail>ben.agullana@hotmail.fr</authorEmail>
<authorUrl>http://www.benjamin-agullana.fr</authorUrl>
<copyright>Copyright Benjamin Agullana - All rights reserved</copyright>
<license>GNU/GPL</license>
<version>1.3</version>
<description>This plugin shows, at the end of an article, links to articles related on the current article by matching keywords (tags). You can define black listed words and a limit to number of articles to display. A lot of other features are available.</description>
<files>
   <filename plugin="relatedarticlestags">relatedarticlestags.php</filename>
   <filename>relatedArticlesTags/relatedArticlesTags.css</filename>
   <filename>relatedArticlesTags/relatedArticlesTags.js</filename>
</files>
<languages>
   <language tag="en-GB">en-GB.plg_content_relatedarticlestags.ini</language>
</languages>
<params>
    <param name="limit" type="text" default="5" label="Nb Articles" description="Number of articles to display" />
    <param name="order" type="radio" default="DESC" label="Order article" description="Newest oldest">
		   <option value="DESC">Newest</option>
		   <option value="ASC">Oldest</option>
		   <option value="RANDOM">Random</option>
	  </param>
    <param name="section" type="text" default="" label="Sections" description="Section Matching" />
    <param name="category" type="text" default="" label="Categories" description="Category Matching" />
    <param name="sectionno" type="text" default="" label="Sections displaying" description="Sections appears" />
    <param name="categoryno" type="text" default="" label="Categories displaying" description="Categories appears" />
	  <param name="nbtool" type="text" default="250" label="Introtext" description="Number of letters to display" />
    <param name="blacklistword" type="textarea" rows="20" cols="60" default="" label="BlackList KeyWords" description="Black listed word" />
</params>
</install>
